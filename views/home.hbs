<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <title>Welcome to ShoppingCart</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Shopping Cart</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/cart">Cart</a>
            </li>

          </ul>
          <form class="d-flex">
            <input
              class="form-control me-2"
              type="search"
              placeholder="Search"
              aria-label="Search"
            />
            <button
              class="btn btn-outline-success"
              type="submit"
            >Search</button>
          </form>
        </div>
      </div>
    </nav>
    <br />
    <div class="container">
      <div class="items">

      </div>

      <div class="row">
        <div class="col-sm">
          <div class="card" style="width: 20rem;">
            <img
              src="../static/images/notebook.jpg"
              class="card-img-top"
              alt="..."
              style="height:10rem; width:10rem"
            />
            <div class="card-body">
              <form method="POST" action="/">
                <h5 class="card-title">NoteBook</h5>
                <input type="hidden" name="name" value="NoteBook" />
                <input
                  type="hidden"
                  name="image"
                  value="../static/images/notebook.jpg"
                />
                <input type="hidden" name="price" value="100" />
                <h6 class="card-title danger">₹100</h6>
                <p class="card-text">This is a notebook.</p>
                <label for="qtys">Quantity(min):</label>
                <select name="qty" id="qty">
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                  <option value="6">6</option>
                  <option value="7">7</option>
                  <option value="8">8</option>
                  <option value="9">9</option>
                  <option value="10">10</option>
                </select>
                <button
                  type="submit"
                  class="btn bg-warning"
                  onclick="myFunction()"
                >Add to Cart</button>
              </form>
            </div>
          </div>
        </div>
        <div class="col-sm">
          <div class="card" style="width: 20rem;">
            <img
              src="../static/images/sanitizer.jpg"
              class="card-img-top"
              alt="..."
              style="height:10rem; width:10rem"
            />
            <div class="card-body">
              <form method="POST" action="/">
                <input type="hidden" name="name" value="sanitizer" />
                <input
                  type="hidden"
                  name="image"
                  value="../static/images/sanitizer.jpg"
                />
                <input type="hidden" name="price" value="250" />

                <h5 class="card-title">Hand Sanitizer</h5>
                <h6 class="card-title danger">₹250</h6>
                <p class="card-text">This is a hand sanitizer.</p>
                <label for="qtys">Quantity(min):</label>
                <select name="qty" id="qty">
                  <option value="10">10</option>
                  <option value="11">11</option>
                  <option value="12">12</option>
                  <option value="13">13</option>
                  <option value="14">14</option>
                  <option value="15">15</option>
                  <option value="16">16</option>
                  <option value="17">17</option>
                </select>
                <button
                  type="submit"
                  class="btn bg-warning"
                  onclick="myFunction()"
                >Add to Cart</button>
              </form>
            </div>
          </div>
        </div>
        <div class="col-sm">
          <div class="card" style="width: 20rem;">
            <img
              src="../static/images/bag.jpg"
              class="card-img-top"
              alt="..."
              style="height:10rem; width:10rem"
            />
            <div class="card-body">
              <form method="POST" action="/">
                <input type="hidden" name="name" value="bag" />
                <input
                  type="hidden"
                  name="image"
                  value="../static/images/bag.jpg"
                />
                <input type="hidden" name="price" value="1500" />
                <h5 class="card-title">Bag</h5>
                <h6 class="card-title danger">₹1500</h6>
                <p class="card-text">This is a laptop bag</p>
                <label for="qtys">Quantity(min):</label>
                <select name="qty" id="qty">
                  <option value="1">1</option>
                  <option value="2">2</option>

                </select>
                <button
                  type="submit"
                  class="btn bg-warning"
                  onclick="myFunction()"
                >Add to Cart</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

    <script>
      function myFunction() { alert("Added to Cart"); }
    </script>
  </body>
</html>